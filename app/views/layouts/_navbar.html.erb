<div class="navbar navbar-default navbar-fixed-top">
	<div class="container">
		<div class="navbar-header">
			<a href="#home" class="navbar-brand">
				<img alt="Gabaritei" src="assets/logo_mini.png" />
			</a>
			<button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>
		<div class="navbar-collapse collapse" id="navbar-main">
			<ul class="nav navbar-nav" ng-controller="MenuController as Ctrl">
				<%= render 'layouts/navlist' %>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<li class="dropdown" ng-controller="TranslationsController as Ctrl">
		          	<a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
		          		<span translate>menu.language</span>
		     			<span class="caret"></span>
		          	</a>
			        <ul class="dropdown-menu">
			            <li ng-repeat="(key, language) in Ctrl.languages">
			            	<a ng-click="Ctrl.changeLanguage(key)">
			            		<span ng-hide="Ctrl.currentLanguage() != key" class="glyphicon glyphicon-ok" style="padding-right: 6px"></span>
			            		{{ language }}
			            	</a>
			            </li>
			        </ul>
		        </li>
			</ul>

		</div>
	</div>
</div>
